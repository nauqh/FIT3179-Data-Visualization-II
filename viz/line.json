{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Stock prices of 5 Tech Companies over Time.",
    "config": {
        "axis": {
            "grid": false,
            "ticks": false,
            "domain": false,
            "labelColor": "#fafafa"
        },
        "view": {
            "stroke": null
        }
    },
    "width": "container",
    "background": "transparent",
    "data": {
        "url": "../data/netflix.csv"
    },
    "transform": [
        {
            "filter": {
                "timeUnit": "year",
                "field": "release_year",
                "range": [
                    2000,
                    2021
                ]
            }
        }
    ],
    "encoding": {
        "x": {
            "timeUnit": "year",
            "field": "release_year",
            "type": "ordinal",
            "axis": {
                "title": null
            }
        }
    },
    "layer": [
        {
            "encoding": {
                "y": {
                    "field": "type",
                    "aggregate": "count",
                    "type": "quantitative"
                },
                "color": {
                    "field": "type",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Movie",
                            "TV Show"
                        ],
                        "range": [
                            "#ea335d",
                            "#03dcee"
                        ]
                    },
                    "legend": null
                }
            },
            "layer": [
                {
                    "mark": "line"
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "hover",
                                "empty": false
                            }
                        }
                    ],
                    "mark": "point"
                }
            ]
        },
        {
            "transform": [
                {
                    "pivot": "type",
                    "groupby": [
                        "release_year"
                    ],
                    "value": "type",
                    "op": "count"
                }
            ],
            "mark": "rule",
            "encoding": {
                "opacity": {
                    "condition": {
                        "value": 0.3,
                        "param": "hover",
                        "empty": false
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Movie",
                        "type": "quantitative"
                    },
                    {
                        "field": "TV Show",
                        "type": "quantitative"
                    }
                ]
            },
            "params": [
                {
                    "name": "hover",
                    "select": {
                        "type": "point",
                        "fields": [
                            "release_year"
                        ],
                        "nearest": true,
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }
            ]
        }
    ]
}