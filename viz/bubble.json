{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "height": 350,
    "width": 500,
    "signals": [
        {
            "name": "cx",
            "update": "width / 2"
        },
        {
            "name": "cy",
            "update": "height / 2"
        }
    ],
    "data": [
        {
            "name": "table",
            "values": [
                {
                    "category": "TV-MA",
                    "amount": 883
                },
                {
                    "category": "R",
                    "amount": 556
                },
                {
                    "category": "TV-14",
                    "amount": 474
                },
                {
                    "category": "TV-13",
                    "amount": 404
                },
                {
                    "category": "PG-13",
                    "amount": 351
                },
                {
                    "category": "PG",
                    "amount": 233
                },
                {
                    "category": "TV-PG",
                    "amount": 188
                },
                {
                    "category": "G",
                    "amount": 124
                },
                {
                    "category": "TV-Y7",
                    "amount": 120
                },
                {
                    "category": "TV-Y",
                    "amount": 107
                },
                {
                    "category": "TV-G",
                    "amount": 79
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "size",
            "domain": {
                "data": "table",
                "field": "amount"
            },
            "range": [
                650,
                6000
            ]
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "table",
                "field": "category"
            },
            "range": "ramp"
        }
    ],
    "marks": [
        {
            "name": "nodes",
            "type": "symbol",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "fill": {
                        "scale": "color",
                        "field": "category"
                    },
                    "xfocus": {
                        "signal": "cx"
                    },
                    "yfocus": {
                        "signal": "cy"
                    }
                },
                "update": {
                    "size": {
                        "signal": "datum.amount*4",
                        "scale": "size"
                    },
                    "stroke": {
                        "value": "white"
                    },
                    "strokeWidth": {
                        "value": 1
                    },
                    "tooltip": {
                        "signal": "datum"
                    }
                }
            },
            "transform": [
                {
                    "type": "force",
                    "iterations": 100,
                    "static": false,
                    "forces": [
                        {
                            "force": "collide",
                            "iterations": 2,
                            "radius": {
                                "expr": "sqrt(datum.size) / 2"
                            }
                        },
                        {
                            "force": "center",
                            "x": {
                                "signal": "cx"
                            },
                            "y": {
                                "signal": "cy"
                            }
                        },
                        {
                            "force": "x",
                            "x": "xfocus",
                            "strength": {
                                "signal": "0.15"
                            }
                        },
                        {
                            "force": "y",
                            "y": "yfocus",
                            "strength": {
                                "signal": "0.2"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "text",
            "from": {
                "data": "nodes"
            },
            "encode": {
                "enter": {
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "middle"
                    },
                    "fontSize": {
                        "value": 12
                    },
                    "fontWeight": {
                        "value": "bold"
                    },
                    "fill": {
                        "value": "white"
                    },
                    "text": {
                        "field": "datum.category"
                    }
                },
                "update": {
                    "x": {
                        "field": "x"
                    },
                    "y": {
                        "field": "y"
                    }
                }
            }
        }
    ]
}